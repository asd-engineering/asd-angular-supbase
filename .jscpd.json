  "threshold": 15,
  "reporters": ["console", "json"],
  "ignore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/.angular/**",
    "**/coverage/**",
    "**/test-results/**",
    "**/playwright-report/**",
    "**/*.spec.ts"
